        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a5"
        app:layout_constraintEnd_toEndOf="@+id/easy_view"
        app:layout_constraintTop_toTopOf="@+id/easy_view" />

    <ImageView
        android:id="@+id/easy_a4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a4"
        app:layout_constraintEnd_toEndOf="@+id/easy_view"
        app:layout_constraintTop_toTopOf="@+id/easy_view" />

    <ImageView
        android:id="@+id/easy_a5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a3"
        app:layout_constraintEnd_toEndOf="@+id/easy_view"
        app:layout_constraintTop_toTopOf="@+id/easy_view" />

    <ImageView
        android:id="@+id/expert_a1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a1"
        app:layout_constraintEnd_toEndOf="@+id/expert_view"
