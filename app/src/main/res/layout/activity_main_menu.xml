    <ImageView
        android:id="@+id/expert_a3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a5"
        app:layout_constraintEnd_toEndOf="@+id/expert_view"
        app:layout_constraintTop_toTopOf="@+id/expert_view" />

    <ImageView
        android:id="@+id/expert_a4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a4"
        app:layout_constraintEnd_toEndOf="@+id/expert_view"
        app:layout_constraintTop_toTopOf="@+id/expert_view" />

    <ImageView
        android:id="@+id/expert_a5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a3"
        app:layout_constraintEnd_toEndOf="@+id/expert_view"
        app:layout_constraintTop_toTopOf="@+id/expert_view" />

    <ImageView
        android:id="@+id/expert_a6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a6"
        app:layout_constraintEnd_toEndOf="@+id/expert_view"
        app:layout_constraintTop_toTopOf="@+id/expert_view" />

    <ImageView
        android:id="@+id/master_a1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a1"
        app:layout_constraintEnd_toEndOf="@+id/master_view"
        app:layout_constraintTop_toTopOf="@+id/master_view" />

    <ImageView
        android:id="@+id/master_a2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a2"
        app:layout_constraintEnd_toEndOf="@+id/master_view"
        app:layout_constraintTop_toTopOf="@+id/master_view" />

    <ImageView
        android:id="@+id/master_a3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a5"
        app:layout_constraintEnd_toEndOf="@+id/master_view"
        app:layout_constraintTop_toTopOf="@+id/master_view" />

    <ImageView
        android:id="@+id/master_a4"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a4"
        app:layout_constraintEnd_toEndOf="@+id/master_view"
        app:layout_constraintTop_toTopOf="@+id/master_view" />

    <ImageView
        android:id="@+id/master_a5"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a3"
        app:layout_constraintEnd_toEndOf="@+id/master_view"
        app:layout_constraintTop_toTopOf="@+id/master_view" />

    <ImageView
        android:id="@+id/master_a6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a6"
        app:layout_constraintEnd_toEndOf="@+id/master_view"
        app:layout_constraintTop_toTopOf="@+id/master_view" />

    <ImageView
        android:id="@+id/master_a7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ball"
        android:scaleType="fitXY"
        android:src="@drawable/a7"
        app:layout_constraintEnd_toEndOf="@+id/master_view"
        app:layout_constraintTop_toTopOf="@+id/master_view" />

    <Button
        android:id="@+id/buttonInfoEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_easy"
        android:onClick="infoEasyGame"
        android:text="@string/info_label"
        android:textColor="@color/easyDark"
        app:layout_constraintBottom_toBottomOf="@+id/easy_view"
        app:layout_constraintStart_toStartOf="@+id/easy_view" />

    <Button
        android:id="@+id/buttonInfoExpert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_expert"
        android:onClick="infoExpertGame"
        android:text="@string/info_label"
        android:textColor="@color/expertDark"
        app:layout_constraintBottom_toBottomOf="@+id/expert_view"
        app:layout_constraintStart_toStartOf="@+id/expert_view" />

    <Button
        android:id="@+id/buttonInfoMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_master"
        android:onClick="infoMasterGame"
        android:text="@string/info_label"
        android:textColor="@color/masterDark"
        app:layout_constraintBottom_toBottomOf="@+id/master_view"
        app:layout_constraintStart_toStartOf="@+id/master_view" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="settings"
        android:visibility="invisible"
        android:text="@string/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/match_balls"
        android:src="@drawable/games"
        app:layout_constraintBottom_toTopOf="@+id/easy_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="226dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/match_balls"
        android:src="@drawable/ons"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:onClick="help"
        android:text="@string/help"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/master_view" />
